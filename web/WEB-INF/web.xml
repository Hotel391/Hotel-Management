<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>DashBoard</servlet-name>
        <servlet-class>controllers.admin.DashBoard</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Statistics</servlet-name>
        <servlet-class>controllers.admin.Statistics</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>AdminReview</servlet-name>
        <servlet-class>controllers.admin.AdminReview</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminRoom</servlet-name>
        <servlet-class>controllers.admin.AdminRoom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminService</servlet-name>
        <servlet-class>controllers.admin.AdminService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashBoard</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Statistics</servlet-name>
        <url-pattern>/admin/dashboard/statistics</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminReview</servlet-name>
        <url-pattern>/AdminReview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminRoom</servlet-name>
        <url-pattern>/AdminRoom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminService</servlet-name>
        <url-pattern>/AdminService</url-pattern>
    </servlet-mapping>
</web-app>
